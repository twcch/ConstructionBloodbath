# Don't count build artifacts in language stats
build/** linguist-detectable=false
dist/** linguist-detectable=false
*.toc linguist-detectable=false
*.spec linguist-detectable=false

# Ignore documentation / assets for language stats
*.json linguist-detectable=false
*.html linguist-detectable=false
*.[Tt][Ee][Xx]  linguist-detectable=false

# Force Python as the main language
*.py linguist-language=Python
